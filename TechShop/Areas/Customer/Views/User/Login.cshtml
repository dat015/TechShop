@model TechShop.ViewModel.LoginVM
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row border rounded-5 p-3 bg-white shadow box-area">
        <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #103cbe;">
            <div class="featured-image mb-3">
                <img src="" class="img-fluid" style="width: 250px;">
            </div>
            <p class="text-white fs-2" style="font-family: 'Courier New', Courier, monospace; font-weight: 600;">Be Verified</p>
            <small class="text-white text-wrap text-center" style="width: 17rem; font-family: 'Courier New', Courier, monospace;">Join experienced Designers on this platform.</small>
        </div>

        <div class="col-md-6 right-box">
            <form id="registerForm" asp-action="Login" asp-controller="User" asp-area="Customer">

                <div class="row align-items-center">
                    <div class="header-text mb-4">
                        <h2>Hello,Again</h2>
                        <p>We are happy to have you back.</p>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="@Model.Email" type="email" class="form-control form-control-lg bg-light fs-6" placeholder="Email address" id="email" />
                    </div>

                    <div class="input-group mb-3">
                        <input asp-for="@Model.Password" type="password" class="form-control form-control-lg bg-light fs-6" placeholder="Password" id="password" />
                    </div>
                </div>
                <div class="input-group mb-3">
                    <button type="submit" class="btn btn-lg btn-primary w-100 fs-6">Login</button>
                </div>
                <div class="input-group mb-3">
                    <button type="button" class="btn btn-lg btn-light w-100 fs-6">
                        <i class="bi bi-google me-2" style="width:25px;"></i>
                        <small>Login with Google</small>
                    </button>
                </div>
                <div class="row">
                    <small>You haven't an account? <a asp-controller="User" asp-action="Register">Register</a></small>
                </div>
            </form>

        </div>
    </div>
</div>