<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <div class="header">
            <div class="header__logo">
                <a>
                    <img src="~/images/logo_laptopaz (2).jpg" class="headder__logo--img" />
                </a>
            </div>
            <div class="header__search">
                <input type="text" class="header__search--input" placeholder="Search here" />
                <div class="header__search--icon">
                    <i class="bi bi-search" style="color :white;"></i>
                </div>
                

            </div>
            <div class ="header__phone">
                <div class="header__phone--item">
                    <i class="bi bi-telephone-fill" style="color :red;"></i>
                    <b style="color :red;">HOTLINE</b>
                    <br />  
                    <b>0825 233 233</b>
                </div>
            </div>
            <div class="header__shopcart">
                <div class="header__shopcart--item">
                    <i class="bi bi-cart-fill" style="color :red;"></i>
                    <br/>
                    <span>
                        Giỏ hàng 
                    </span>
                </div>
            </div>
        </div>
       
    </header>
    <nav class="main-menu">

        <div class="main-menu__item">
            
            <i class="bi bi-laptop" id="main-menu__item--icon" style="color :white;"></i>

            <b >
               LAPTOP MỚI
            </b>
            

        </div>
        <div class="main-menu__item">
            <i class="bi bi-windows" id="main-menu__item--icon" style="color :white;"></i>
            <b>SURFACE</b>

        </div>
        <div class="main-menu__item">
            <i class="bi bi-laptop" id="main-menu__item--icon" style="color :white;"></i>
            <b>LAPTOP LIKE NEW</b>

        </div>
        <div class="main-menu__item" >
            
            <i class="bi bi-fire" id="main-menu__item--icon" style="color :white;"></i>
            <b>KHUYẾN MÃI</b>

        </div>
        <div class="main-menu__item" >
            <i class="bi bi-wallet2" id="main-menu__item--icon" style="color :white;"></i>
            <b>TRẢ GÓP</b>

        </div>


    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TechShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
