@model IEnumerable<Category>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Category List";
}
<div class="container pt-4 pd-3">
    <table class="table table-bordered table-striped">
        <div class="row">
            <div class="col-6 text-primary">Categories List</div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle-fill"></i> Create New Category
                </a>
            </div>
        </div>
        <thead>
            <tr>
                <th>
                    Category Id
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Category Description
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach(var cat in Model)
            {
                <tr>
                    <th>@cat.CategoryId</th>
                    <th>@cat.CategoryName</th>
                    <th>@cat.Description</th>
                    <th>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.CategoryId" class="btn btn-secondary mx-2">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                    </th>
                    <th>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.CategoryId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i> Xóa
                        </a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
